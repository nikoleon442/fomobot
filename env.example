# Polling configuration
POLL_INTERVAL_SECONDS=60
MILESTONE_CONSECUTIVE_THRESHOLD=3
MILESTONES=2,3,4,5,6,7,8,9,10

# Anti-spam / false alert protection
# Max allowed market cap change ratio per poll cycle (rejects spikes > 3x in one cycle)
MAX_CAP_CHANGE_RATIO=3
# Cooldown between alerts for same token in seconds (default 5 minutes)
ALERT_COOLDOWN_SECONDS=300

# Provider configuration
MARKET_CAP_PROVIDER=dexscreener
GECKOTERMINAL_NETWORK=solana

# Supabase configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_TABLE_FSM=platinum_calls
SUPABASE_TABLE_ISSAM=client_calls_issam

# Telegram configuration
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID_FSM=your_fsm_chat_id_here
TG_CHAT_ID_ISSAM=your_issam_chat_id_here
TG_THREAD_ID_ISSAM=your_issam_thread_id_here

# Provider API keys (optional)
CMC_API_KEY=your_cmc_api_key_here
BIRDEYE_API_KEY=your_birdeye_api_key_here

# Server configuration
PORT=3000
NODE_ENV=development
